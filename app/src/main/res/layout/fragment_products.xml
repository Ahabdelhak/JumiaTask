<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="android.ptc.com.ptcflixing.viewmodels.MainViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:mainViewModel="@{mainViewModel}" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.fragments.main.FragmentCategories">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/categoryOne_shimmer"
                    visibleGone="@{mainViewModel.productsLoadingState.showLoading}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/categoryTwo_shimmer"
                    visibleGone="@{mainViewModel.productsLoadingState.showLoading}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categoryOne_shimmer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/categoryThree_shimmer"
                    visibleGone="@{mainViewModel.productsLoadingState.showLoading}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categoryTwo_shimmer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/shimmer_product_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <LinearLayout
                    android:id="@+id/dashboard_LL"
                    visibleGone="@{!mainViewModel.productsLoadingState.showLoading &amp; !mainViewModel.productsLoadingState.showRetry}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="20dp"
                        android:text="@string/filters"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableLeftCompat="@drawable/ic_filter"
                        app:drawableStartCompat="@drawable/ic_filter" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@color/black" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="20dp"
                        android:text="@string/popularity"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableLeftCompat="@drawable/ic_sort"
                        app:drawableStartCompat="@drawable/ic_sort" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_categories"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/separator_V"
                    android:background="@color/black"
                    visibleGone="@{!mainViewModel.productsLoadingState.showLoading &amp; !mainViewModel.productsLoadingState.showRetry}"
                    app:layout_constraintTop_toBottomOf="@id/dashboard_LL"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/products_RV"
                    visibleGone="@{!mainViewModel.productsLoadingState.showLoading &amp; !mainViewModel.productsLoadingState.showRetry}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutAnimation="@anim/recyelerview_item_animation"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator_V"
                    app:spanCount="2" />


                <LinearLayout
                    visibleGone="@{mainViewModel.productsLoadingState.showRetry}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="@{mainViewModel.productsLoadingState.errorMessage}"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_refresh"
                        android:drawableLeft="@drawable/ic_refresh"
                        android:drawablePadding="8dp"
                        android:onClick="@{()-> mainViewModel.productsLoadingState.retry.retry()}"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/retry"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>