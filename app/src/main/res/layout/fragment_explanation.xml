<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:lottie_rawRes="@raw/welcome"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/how_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_to_use_jumia_ptc"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:alpha="87"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/use_the_toolbar_search_with_the_keyword_phone_to_get_a_list_of_results_n_n_on_the_listing_product_one_and_two_have_a_detail_page_n_n_product_three_returns_a_200_success_false_n_n_product_4_returns_not_found"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textColor="@color/colorBlack"
        android:alpha="87"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_to" />
</androidx.constraintlayout.widget.ConstraintLayout>

